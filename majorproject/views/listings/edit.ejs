<% layout("/layouts/boilerplate") %> 
<body>
    
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>    
        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
        <div class="valid-feedback">Good</div>
        </div>
        <div class="mb-3">
           <label for="description" class="form-label">Description</label> 
           <textarea name="listing[description]" value="<%=listing.description%>" type="text" rows="4" cols="50" class="form-control" required></textarea>
           <div class="invalid-feedback">Description should be valid1!</div>
        </div>
       
        <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>   
        <input name="listing[image]" value ="<%= listing.image %>" type="upload" class="form-control">
        </div>
        <div class="mb-3">
        <label for="price" class="form-label">Price</label>    
        <input name="listing[price]" value="<%=listing.price %>" type="number" class="form-control" required>
        <div class="invalid-feedback">Price should be valid1!</div>
       </div>
       <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" value="<%=listing.country%> "type="text" class="form-control" required>
        <div class="invalid-feedback">Country should be valid1!</div>
        </div>
        <div class="mb-3">
        <label for="location" class="form-label">Location</label>    
        <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control" required>
        <div class="invalid-feedback">Location should be valid1!</div>
        </div>
        <button class="btn btn-dark edit-btn">Edit</button>
        <br/> <br/>

    </form>
    </div>
    </div>
    
</body>
